<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="200dp">
    <ImageView
        android:src="@drawable/me_header_backgroud"
        android:scaleType="centerCrop"
        android:id="@+id/me_header_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/me_black_36dp"
            android:layout_margin="30dp"
            android:id="@+id/me_myicon"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <TextView
            android:id="@+id/me_username"
            android:text="username"
            android:textSize="25dp"
            android:layout_toEndOf="@id/me_myicon"
            android:layout_alignBottom="@id/me_myicon"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/me_work_hours"
            android:layout_below="@id/me_myicon"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:textColor="#000"
            android:text="时长："
            android:background="#00ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/me_ranking"
            android:layout_alignBottom="@id/me_work_hours"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            android:textSize="20dp"
            android:textColor="#000"
            android:text="排名："
            android:background="#00ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</FrameLayout>