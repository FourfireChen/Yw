<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/organizer_avator"
            android:src="@drawable/me_black_36dp"
            android:layout_margin="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/act_title"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/organizer_avator"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <ImageView
            android:id="@+id/act_post"
            android:src="@drawable/home_black_36dp"
            android:layout_below="@id/organizer_avator"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <TextView
            android:id="@+id/act_content"
            android:layout_below="@id/organizer_avator"
            android:layout_toRightOf="@id/act_post"
            android:layout_width="match_parent"
            android:layout_height="70dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>